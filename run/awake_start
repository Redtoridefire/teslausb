#!/bin/bash -eu

function ping {
  while true
  do
    curl "https://www.teslafi.com/feed.php?token=TOKEN_HERE&command=wake" 
    log "Reset TeslaFi polling timer to keep vehicle awake"
    sleep 90
  done
}

log "Starting background task to keep car awake."
    ping &
    echo $! > /tmp/keep_awake_task_pid
